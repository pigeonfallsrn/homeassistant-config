# Kitchen Tablet Scene Scripts

kitchen_scene_cooking_bright:
  alias: "Kitchen - Cooking Bright"
  icon: mdi:stove
  sequence:
    - service: light.turn_on
      target:
        entity_id:
          - light.kitchen_ceiling_inovelli_vzm31_sn
          - light.kitchen_above_table_chandelier_inovelli
          - light.above_kitchen_sink_inovelli_switch
      data:
        brightness_pct: 100

kitchen_scene_dinner_dim:
  alias: "Kitchen - Dinner Dim"
  icon: mdi:candle
  sequence:
    - service: light.turn_on
      target:
        entity_id: light.kitchen_above_table_chandelier_inovelli
      data:
        brightness_pct: 40
    - service: light.turn_off
      target:
        entity_id:
          - light.kitchen_ceiling_inovelli_vzm31_sn
          - light.above_kitchen_sink_inovelli_switch

kitchen_scene_movie_night:
  alias: "Kitchen - Movie Night"
  icon: mdi:movie-open
  sequence:
    - service: light.turn_off
      target:
        entity_id:
          - light.kitchen_ceiling_inovelli_vzm31_sn
          - light.kitchen_above_table_chandelier_inovelli
          - light.above_kitchen_sink_inovelli_switch
    - service: light.turn_on
      target:
        entity_id: light.kitchen_lounge_lamp
      data:
        brightness_pct: 15

kitchen_scene_all_off:
  alias: "Kitchen - All Off"
  icon: mdi:lightbulb-off
  sequence:
    - service: light.turn_off
      target:
        entity_id:
          - light.kitchen_ceiling_inovelli_vzm31_sn
          - light.kitchen_above_table_chandelier_inovelli
          - light.above_kitchen_sink_inovelli_switch
          - light.kitchen_lounge_lamp
          - light.kitchen_lounge_inovelli_smart_dimmer
          - light.kitchen_hue_color_floor_lamp

# Music shortcuts for tablet
kitchen_play_chill:
  alias: "Kitchen - Play Chill Music"
  icon: mdi:music
  sequence:
    - service: media_player.play_media
      target:
        entity_id: media_player.kitchen_sonos_beam
      data:
        media_content_id: "spotify:playlist:37i9dQZF1DWZd79rJ6a7lp"
        media_content_type: playlist

kitchen_play_dinner:
  alias: "Kitchen - Play Dinner Music"
  icon: mdi:silverware-fork-knife
  sequence:
    - service: media_player.play_media
      target:
        entity_id: media_player.kitchen_sonos_beam
      data:
        media_content_id: "spotify:playlist:37i9dQZF1DX4wta20PHgwo"
        media_content_type: playlist

kitchen_play_kids:
  alias: "Kitchen - Play Kids Music"
  icon: mdi:balloon
  sequence:
    - service: media_player.play_media
      target:
        entity_id: media_player.kitchen_sonos_beam
      data:
        media_content_id: "spotify:playlist:37i9dQZF1DX6RQTY0gGbeh"
        media_content_type: playlist

kitchen_sonos_stop:
  alias: "Kitchen - Stop Music"
  icon: mdi:stop
  sequence:
    - service: media_player.media_stop
      target:
        entity_id: media_player.kitchen_sonos_beam
