# MOBILE MAIN - S24 Ultra optimized main dashboard
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
mobile-main:
  title: Mobile
  icon: mdi:cellphone
  path: mobile-main
  badges: []
  cards:
    # Status header
    - type: vertical-stack
      cards:
        - type: markdown
          content: |
            # {{ states('sensor.house_occupancy_state') }}
            {{ now().strftime('%A, %B %d â€¢ %I:%M %p') }}
        
        - type: glance
          show_name: false
          show_state: true
          entities:
            - entity: input_boolean.john_home
              name: J
            - entity: input_boolean.alaina_home
              name: A
            - entity: input_boolean.ella_home
              name: E
            - entity: input_boolean.michelle_home
              name: M
    
    # Quick toggles
    - type: horizontal-stack
      cards:
        - type: button
          name: Night Mode
          icon: mdi:brightness-2
          tap_action:
            action: toggle
          entity: input_boolean.preserve_night_vision
        - type: button
          name: Guest
          icon: mdi:account-plus
          tap_action:
            action: toggle
          entity: input_boolean.guest_present
    
    # Room scenes - swipeable
    - type: entities
      title: Rooms
      show_header_toggle: false
      entities:
        - type: custom:slider-entity-row
          entity: light.living_room_lounge_ceiling_hue_color_lights
          name: Living Room
        - type: custom:slider-entity-row
          entity: light.entry_room_ceiling_hue_white_lights
          name: Entry
        - type: custom:slider-entity-row
          entity: light.kitchen_chandelier_1of5
          name: Kitchen
        - type: custom:slider-entity-row
          entity: light.upstairs_hallway
          name: Upstairs
        - type: custom:slider-entity-row
          entity: light.alaina_s_ceiling_led_lights
          name: Alaina's Room
    
    # Climate - compact
    - type: horizontal-stack
      cards:
        - type: thermostat
          entity: climate.1st_floor_thermostat
          name: Down
        - type: thermostat
          entity: climate.upstairs
          name: Up
    
    # Today's calendar
    - type: calendar
      entities:
        - calendar.alaina_ella
        - calendar.work
        - calendar.john_michelle
      initial_view: listWeek

