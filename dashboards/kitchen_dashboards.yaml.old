# FAMILY HOME - Default view when everyone is home
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
kitchen-family:
  title: Home
  icon: mdi:home
  path: kitchen-family
  badges: []
  cards:
    # Header with occupancy status
    - type: vertical-stack
      cards:
        - type: markdown
          content: |
            # ğŸ  Welcome Home
            **{{ states('sensor.house_occupancy_state') }}** â€¢ {{ states('sensor.people_home_count') }} people
            {{ now().strftime('%A, %B %d') }}
        
        - type: horizontal-stack
          cards:
            - type: button
              entity: input_boolean.john_home
              name: John
              show_state: true
              icon: mdi:account
            - type: button
              entity: input_boolean.alaina_home
              name: Alaina
              show_state: true
              icon: mdi:account
            - type: button
              entity: input_boolean.ella_home
              name: Ella
              show_state: true
              icon: mdi:account
            - type: button
              entity: input_boolean.michelle_home
              name: Michelle
              show_state: true
              icon: mdi:account
    
    # Quick controls
    - type: entities
      title: Quick Controls
      show_header_toggle: false
      entities:
        - entity: input_boolean.preserve_night_vision
          name: Night Vision Mode
        - entity: input_boolean.guest_present
          name: Guest Present
        - type: divider
        - entity: sensor.time_context
          name: Time of Day
        - entity: input_boolean.school_tomorrow
          name: School Tomorrow
    
    # Lights by area
    - type: light
      entity: light.living_room_lounge_ceiling_hue_color_lights
      name: Living Room
    
    - type: light
      entity: light.entry_room_ceiling_hue_white_lights
      name: Entry Room
    
    - type: light
      entity: light.kitchen_chandelier_1of5
      name: Kitchen
    
    - type: light
      entity: light.upstairs_hallway
      name: Upstairs Hallway
    
    - type: light
      entity: light.alaina_s_ceiling_led_lights
      name: Alaina's Room
    
    # Climate controls
    - type: thermostat
      entity: climate.1st_floor_thermostat
      name: Downstairs
    
    - type: thermostat
      entity: climate.upstairs
      name: Upstairs
    
    # Calendar glance
    - type: calendar
      entities:
        - calendar.alaina_ella
        - calendar.work
        - calendar.john_michelle
      initial_view: listWeek

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# JOHN ONLY - Kids at school or away
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
kitchen-john:
  title: John's View
  icon: mdi:account
  path: kitchen-john
  badges: []
  cards:
    - type: markdown
      content: |
        # ğŸ‘¨ John's Dashboard
        {{ now().strftime('%A, %B %d â€¢ %I:%M %p') }}
        {% if is_state('binary_sensor.kids_expected_away', 'on') %}
        ğŸ« Kids at school
        {% else %}
        ğŸ“ Kids away
        {% endif %}
    
    # Personal quick actions
    - type: horizontal-stack
      cards:
        - type: button
          name: All Lights Off
          icon: mdi:lightbulb-off
          tap_action:
            action: call-service
            service: light.turn_off
            target:
              entity_id: all
        - type: button
          name: Goodnight
          icon: mdi:weather-night
          tap_action:
            action: call-service
            service: input_boolean.turn_on
            target:
              entity_id: input_boolean.preserve_night_vision
    
    # Work schedule
    - type: entities
      title: Today's Schedule
      entities:
        - entity: calendar.work
          name: Work Calendar
        - entity: calendar.alaina_ella
          name: Kids Schedule
        - type: divider
        - entity: input_boolean.school_tomorrow
          name: School Tomorrow
    
    # Main living area controls
    - type: light
      entity: light.living_room_lounge_ceiling_hue_color_lights
      name: Living Room
    
    - type: light
      entity: light.entry_room_ceiling_hue_white_lights
      name: Entry
    
    - type: light
      entity: light.kitchen_chandelier_1of5
      name: Kitchen
    
    # Climate - focus on main floor
    - type: thermostat
      entity: climate.1st_floor_thermostat
      name: Main Floor
    
    # Security/monitoring
    - type: entities
      title: House Status
      show_header_toggle: false
      entities:
        - entity: binary_sensor.house_motion_active
          name: Motion Detected
        - entity: binary_sensor.garage_north_wall_nightlight_motion
          name: Garage Motion
        - entity: binary_sensor.aqara_motion_sensor_p1_occupancy
          name: Kitchen Motion

